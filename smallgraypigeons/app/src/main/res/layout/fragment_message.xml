<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentColor"
    android:orientation="vertical"
    tools:context="cn.bbjy.android.smallgraypigeons.ui.fragment.MessageFragment">

    <RelativeLayout
        android:id="@+id/msgTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y37"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabChild"
            android:layout_width="wrap_content"
             android:layout_height="@dimen/y37"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:tabBackground="@android:color/white"
            app:tabIndicatorColor="#0099ff"
            app:tabGravity="center"
            app:tabPadding="0dp"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed" />

        <ImageView
            android:id="@+id/addFriends"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y37"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/x10"
            android:scaleType="centerInside"
            android:src="@drawable/pop_add" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vpChild"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/msgTop"
        android:background="@color/red"></android.support.v4.view.ViewPager>
</RelativeLayout>




